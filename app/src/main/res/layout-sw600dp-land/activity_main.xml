<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity"
		android:background="#F7D4C6">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Hello Landscape in Tablet!"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:textStyle="bold"
			android:textSize="30sp"
			app:layout_constraintVertical_bias="0.522"
			android:id="@+id/txvWelcome" android:layout_marginBottom="48dp" android:layout_marginLeft="168dp"/>

	<Button
			android:text="Show Message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/btnShowToast"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="18dp"
			android:layout_marginBottom="39dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/txvWelcome"
			android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintHorizontal_bias="0.46" android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>
