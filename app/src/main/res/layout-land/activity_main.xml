<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity"
		android:background="#DDD8EA">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Hello Landscape!"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:textStyle="bold"
			android:textSize="24sp"
			app:layout_constraintVertical_bias="0.43"
			android:id="@+id/txvWelcome" android:layout_marginLeft="80dp"/>

	<Button
			android:text="Show Message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/btnShowToast"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginBottom="39dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.481"
			app:layout_constraintStart_toEndOf="@+id/txvWelcome" android:layout_marginStart="8dp"
			app:layout_constraintHorizontal_bias="0.641"/>

</android.support.constraint.ConstraintLayout>
